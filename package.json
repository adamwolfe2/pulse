{
  "name": "ghostbar",
  "displayName": "GhostBar - AI Browser Companion",
  "version": "0.1.0",
  "description": "Your intelligent browser companion powered by Claude AI",
  "author": "adamwolfe2",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "framer-motion": "^12.26.2",
    "lucide-react": "^0.562.0",
    "plasmo": "^0.90.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.33",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "activeTab",
      "clipboardRead",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "commands": {
      "toggle_visibility": {
        "suggested_key": {
          "default": "Ctrl+Shift+G",
          "mac": "Command+Shift+G"
        },
        "description": "Toggle GhostBar visibility"
      }
    }
  }
}
